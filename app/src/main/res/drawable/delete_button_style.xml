<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#C0392B" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#E74C3C" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
