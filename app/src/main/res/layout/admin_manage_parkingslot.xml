<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/titleManageSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Parking Slots"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Add Slot Button -->
    <Button
        android:id="@+id/btnAddSlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Slot"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView for Slot List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerParkingSlots"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:dividerHeight="8dp" />
</LinearLayout>
