<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo -->
    <ImageView
        android:id="@+id/registerLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="App Logo" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp" />

    <!-- Email -->
    <EditText
        android:id="@+id/registerEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:layout_marginBottom="16dp" />

    <!-- Username -->
    <EditText
        android:id="@+id/registerUsernameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="textPersonName"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:layout_marginBottom="16dp" />

    <!-- Plate Number -->
    <EditText
        android:id="@+id/registerPlateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plate Number"
        android:inputType="textCapCharacters"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:layout_marginBottom="16dp" />

    <!-- Password -->
    <EditText
        android:id="@+id/registerPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:layout_marginBottom="16dp" />

    <!-- Confirm Password -->
    <EditText
        android:id="@+id/registerConfirmPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:textColorHint="#BBBBBB"
        android:layout_marginBottom="24dp" />

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp" />

    <!-- Redirect to Login -->
    <TextView
        android:id="@+id/loginRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log in"
        android:textColor="#8E44AD"
        android:textStyle="italic"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
