<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Top Section with Logo & Title -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/registerLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/parkmate_logo"
            android:contentDescription="App Logo"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join ParkMate"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Form -->
    <ScrollView
        android:id="@+id/scrollSection"
        android:layout_below="@id/topSection"
        android:layout_above="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Floating-style inputs -->
            <EditText
                android:id="@+id/registerEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:background="@drawable/input_floating_style"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/registerUsernameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:background="@drawable/input_floating_style"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/registerPlateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plate Number"
                android:background="@drawable/input_floating_style"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/registerPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@drawable/input_floating_style"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/registerConfirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@drawable/input_floating_style"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:layout_marginBottom="24dp"
                android:inputType="textPassword" />

            <!-- Login Redirect -->
            <TextView
                android:id="@+id/loginRedirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Log in"
                android:textColor="#8E44AD"
                android:textStyle="italic"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Register Button (fixed position) -->
    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="#000000">

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/rounded_button_card"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp"
            android:elevation="10dp" />
    </LinearLayout>

</RelativeLayout>
