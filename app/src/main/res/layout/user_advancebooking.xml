<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:text="Advance Parking Booking"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Date Selection -->
        <TextView
            android:text="Select your booking date:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/selectDateBtn"
            android:text="Choose Date"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#8E44AD"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/selectedDateText"
            android:text="No date selected"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Parking Slot Selection -->
        <TextView
            android:text="Available Parking Slot:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/slotSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#8E44AD" />

        <!-- Hour Selection -->
        <TextView
            android:text="Select Duration (Hours):"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/hourSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#8E44AD" />

        <!-- Price Display -->
        <TextView
            android:id="@+id/priceText"
            android:text="Total Price: RM 0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#8E44AD"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmBookingBtn"
            android:text="Confirm Booking"
            android:backgroundTint="#8E44AD"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
