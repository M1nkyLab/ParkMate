<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="24dp"
    android:background="#000000">

    <!-- Welcome Header -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Welcome, "
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal" />

    <!-- Real-time Booking Widget -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRealtimeBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1A1A1A">

        <TextView
            android:id="@+id/realtimebooking"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="Real-time Availability and Booking"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Advance Booking Widget -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAdvanceBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1A1A1A">

        <TextView
            android:id="@+id/bydatebook"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="Advance Booking (By Date)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
