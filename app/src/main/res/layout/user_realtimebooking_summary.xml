<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:text="Booking Summary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Card Section (added grey background only) -->
    <LinearLayout
        android:orientation="vertical"
        android:background="#2E2E2E"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <!-- Slot -->
        <TextView
            android:id="@+id/summarySlot"
            android:text="Slot: "
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Vehicle Plate -->
        <TextView
            android:id="@+id/summaryPlate"
            android:text="Plate: "
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Duration / Time -->
        <TextView
            android:id="@+id/summaryTime"
            android:text="Duration: "
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Total Price -->
        <TextView
            android:id="@+id/summaryPrice"
            android:text="Total: RM 0.00"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Proceed to Payment Button -->
    <Button
        android:id="@+id/btnProceedPayment"
        android:text="Proceed to Payment"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
